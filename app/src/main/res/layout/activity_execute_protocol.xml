<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.ModeActivity">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Выберите режим"
            android:textSize="30sp"
            android:visibility="visible" />


        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="В каком режиме Вам будет  комфортно выполнить протокол?"
            android:textSize="20sp"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:gravity="center"
        android:orientation="vertical">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/step1"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:text="Шаг 1"
            android:textColor="@color/black"
            app:backgroundTint="@color/light_gray" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/step2"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:text="Шаг 2"
            android:textColor="@color/black"
            app:backgroundTint="@color/light_gray" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/step3"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:text="Шаг 3"
            android:textColor="@color/black"
            app:backgroundTint="@color/light_gray" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="600dp"
        android:gravity="end"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/scannerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundTint="@color/white"
            app:icon="@drawable/baseline_qr_code_scanner_24"
            app:iconSize="50dp"
            app:iconTint="@color/black" />

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/notElected"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="220dp"
        android:text="не избран"
        android:textColor="@color/black"
        app:backgroundTint="@color/white"

        app:iconTint="@color/black" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/back"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Назад"
        android:textColor="@color/black"
        app:backgroundTint="@color/white"
        app:iconSize="50dp"
        app:iconTint="@color/black" />

</RelativeLayout>
