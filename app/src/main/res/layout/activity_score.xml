<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.ModeActivity">


    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="200dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:gravity="left"

        android:orientation="vertical">

        <TextView
            android:id="@+id/textFirst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Rate the protocol"
            android:textSize="25sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textSecond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Please rate the protocol to improve it and
recommend it to others."
            android:textSize="16sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Rating"
            android:textSize="16sp"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:gravity="left"

        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/score1"
            android:layout_width="50dp"
            android:layout_height="30dp"
            app:backgroundTint="@color/white"
            app:icon="@drawable/baseline_star_24"
            app:iconSize="20dp"
            app:iconTint="@color/light_gray" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/score2"
            android:layout_width="50dp"
            android:layout_height="30dp"
            app:backgroundTint="@color/white"
            app:icon="@drawable/baseline_star_24"
            app:iconSize="20dp"
            app:iconTint="@color/light_gray" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/score3"
            android:layout_width="50dp"
            android:layout_height="30dp"
            app:backgroundTint="@color/white"
            app:icon="@drawable/baseline_star_24"
            app:iconSize="20dp"
            app:iconTint="@color/light_gray" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/score4"
            android:layout_width="50dp"
            android:layout_height="30dp"
            app:backgroundTint="@color/white"
            app:icon="@drawable/baseline_star_24"
            app:iconSize="20dp"
            app:iconTint="@color/light_gray" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/score5"
            android:layout_width="50dp"
            android:layout_height="30dp"
            app:backgroundTint="@color/white"
            app:icon="@drawable/baseline_star_24"
            app:iconSize="20dp"
            app:iconTint="@color/light_gray" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="200dp"
        android:gravity="left"
        android:orientation="vertical">

        <TextView
            android:id="@+id/comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Comment"
            android:textSize="16sp"
            android:visibility="visible" />


        <EditText
            android:id="@+id/commentET"
            android:layout_width="320dp"
            android:layout_height="300dp"
            android:layout_marginTop="10dp"
            android:background="@color/light_gray"
            android:gravity="left"
            android:hint="Could be improved..."

            android:textSize="15sp"
            android:visibility="visible" />
    </LinearLayout>


    <Button
        android:id="@+id/send"
        android:layout_width="320dp"
        android:layout_height="100dp"
        android:layout_marginTop="550dp"
        android:layout_marginLeft="20dp"
        android:text="Send Feedback"
        style="@style/Widget.AppCompat.Button"
        android:textColor="@color/black"
        app:backgroundTint="@color/light_gray" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Назад к протоколу"
        android:textColor="@color/black"
        app:backgroundTint="@color/white"
        app:iconSize="50dp"
        app:iconTint="@color/black" />
</RelativeLayout>
